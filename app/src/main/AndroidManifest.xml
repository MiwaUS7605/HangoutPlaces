        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBJJ1MkOsY8sTRUtZNjM9a-IuAP3WVvLrI" />

        <activity
            android:name=".MessageActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
